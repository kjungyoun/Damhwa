        android:supportsRtl="true"
        android:theme="@style/Theme.DamHwa_Android" >
        <activity
            android:name=".ui.landing.LandingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

