<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/white_box_first_landing"
            app:layout_constraintEnd_toEndOf="@+id/damHwa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/sendFlower" />

        <TextView
            android:id="@+id/sendFlower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="56dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="@string/first_landing_flower"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/damHwa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/first_landing_damhwa"
            android:textColor="@color/black"
            android:textSize="50sp"
            app:layout_constraintStart_toEndOf="@+id/sendFlower"
            app:layout_constraintTop_toTopOf="@+id/sendFlower" />


        <ImageView
            android:id="@+id/intro_flower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/intro_flower"
            app:layout_constraintStart_toEndOf="@+id/sendFlower"
            app:layout_constraintTop_toBottomOf="@+id/damHwa" />

        <ImageView
            android:id="@+id/langE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/child"
            app:layout_constraintBottom_toBottomOf="@+id/bookBlackLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <ImageView
            android:id="@+id/bookBlackLine"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
