<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="flower"
            type="com.example.damhwa_android.data.StoryFlower" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_edittext_transparent"
        android:padding="30dp">

        <ImageView
            android:id="@+id/flower_photo"
            app:flowerUrl="@{flower.imageUrl}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/carouselTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/carouselTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{flower.name}"
            app:layout_constraintBottom_toTopOf="@+id/carouselDescription"
            app:layout_constraintStart_toStartOf="@+id/carouselDescription"
            tools:text="매발톱" />

        <TextView
            android:id="@+id/carouselDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{flower.description}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="독립의 뜻을 가지고 있습니다. 유후유후유후유후 테스트 입니다. 테스트입니다." />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>